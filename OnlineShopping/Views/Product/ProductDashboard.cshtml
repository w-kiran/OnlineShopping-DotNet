@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewData["Title"] = "ProductDashboard";
}

<h1>Product Dashboard</h1>
<form asp-controller="Product" asp-action="Search" method="get" class="d-flex">
    <input type="text" name="searchTerm" value="@Context.Request.Query["searchTerm"]" class="form-control me-2" placeholder="Search products..." />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br/>

<table class="table" style="border:solid">
    <thead style="border:solid">
        <tr>
            <th style="border:solid">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style="border:solid">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="border:solid">
                @Html.DisplayNameFor(model => model.ProductIcon)
            </th>
            <th style="border:solid">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="border:solid">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th style="border:solid">
                Manage
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="border:solid">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="border:solid">
                Rs.@Html.DisplayFor(modelItem => item.Price)
            </td>

            <td style="border:solid">
                <img src="~/@item.ProductIcon" width="100" height="100" style="object-fit:contain"/>
            </td>
            <td style="border:solid">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="border:solid">
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td style="border:solid">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <br/>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> <br />
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a><br />
            </td>
        </tr>
}
    </tbody>
</table>
