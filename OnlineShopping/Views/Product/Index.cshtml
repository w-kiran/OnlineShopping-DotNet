@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table" style="border:solid">
   
    <tbody style="border:solid">
        <tr>
            @foreach (var item in Model)
            {
                <td style="border:solid">
            
                    <img src="~/@item.ProductIcon" width="100" height="100" style="object-fit:contain" /><br />
                    @Html.DisplayFor(modelItem => item.Title)<br/>
                    Rs.@Html.DisplayFor(modelItem => item.Price)<br/>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            }
        </tr>
    </tbody>
</table>
