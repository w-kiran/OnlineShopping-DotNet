@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewData["Title"] = "Welcome to OnlineShopping";
}

<div class="container mt-5">

    <div class="row align-items-center bg-light rounded shadow p-5 mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Welcome to OnlineShopping</h1>
            <p class="lead">Your one-stop destination for fashion, gadgets, and everyday essentials.</p>
            <a href="/Products" class="btn btn-primary btn-lg">Start Shopping</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="/images/your_banner_image.jpg" alt="Online Shopping Banner" class="img-fluid rounded"> @* Update path to your banner image *@
        </div>
    </div>

    <h2 class="mb-4 text-center">Featured Products</h2>
    <div class="row g-4">
        @if (Model != null && Model.Any()) @* Check if the model itself is not null and has items *@
        {
            @foreach (var product in Model) @* Loop directly through the model *@
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/@product.ProductIcon" class="card-img-top" alt="@product.Title" style="height: 200px; object-fit:contain;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text fw-bold">Rs. @product.Price</p>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No featured products available at the moment.</p>
            </div>
        }
    </div>

    <div class="bg-primary text-white text-center p-5 mt-5 rounded shadow">
        <h2 class="mb-3">Don't Miss Out!</h2>
        <p>Sign up today for the best deals, delivered to your inbox.</p>
        <a href="/Account/Register" class="btn btn-light btn-lg">Create Account</a>
    </div>
</div>